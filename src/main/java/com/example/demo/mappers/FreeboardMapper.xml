<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mappers.FreeboardMapper">
    <!-- <select id="getAll" resultType="com.example.demo.model.Freeboard">
        SELECT * FROM example
    </select> -->
    
    <select id="selectFreeboardById" resultType="com.example.demo.model.Freeboard">
    	select title, content, writer from board where freeid = #{id}
    </select>
    <select id="selectAllFreeboard" resultType="com.example.demo.model.Freeboard">
    	select title, content, writer from board
    </select>
    <insert id="insertFreeboard">
    	INSERT INTO BOARD (TITLE, CONTENT, WRITER)
      	VALUES (#{freeboard.title}, #{freeboard.content}, #{freeboard.writer})
    </insert>
</mapper>

